        }
        input {
          flex: 1;
          margin-left: 15rpx;
          padding-left: 10rpx;
          font-size: 36rpx;
          border-bottom: 1rpx solid #707070;
        }
      }
      .p-c-1 {
        input {
          padding-left: 0;
