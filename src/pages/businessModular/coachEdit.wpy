    }
  }
  .p-section-3 {
    position: relative;
    margin-top: 30rpx;
    .p-title {
        margin-bottom: 20rpx;
      }
    .p-upload {
      display: flex;
      flex-wrap: wrap;
      view {
        width: 140rpx;
        height: 150rpx;
        margin-right: 20rpx;
        margin-bottom: 20rpx;
        image {
          width: 140rpx;
          height: 150rpx;
        }
      }
      .p-button {
        background: #aeaaaa;
        position: relative;
        &:after,
        &:before {
          position: absolute;
          content: '';
          display: block;
          background: #fff;
          left: 50%;
          top: 50%;
          transform: translate(-50%, -50%);
        }
        &:after {
          width: 4rpx;
