  position: relative;
  height: 100vh;
  padding: 0 40rpx;
  .hide {
    display: none;
  }
  .show {
    display: block;
  }
  .p-section-1 {
    display: flex;
    padding-top: 56rpx;
    align-items: center;
    .left {
      flex: 1;
      .p-c {
        margin-bottom: 20rpx;
        display: flex;
        align-items: center;
        .p-label {
          font-size: 32rpx;
